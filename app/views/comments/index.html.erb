<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.id %></td>
    <td><%= comment.name %></td>
    <td><%= comment.create_at %></td>
    <td><%= comment.update_at %></td>
    <td><%= link_to '詳細', comment %></td>
    <td><%= link_to '編集', edit_comment_path(comment) %></td>
    <td><%= link_to '削除', comment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

